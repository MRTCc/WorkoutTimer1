<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.workouttimer">

    <uses-permission android:name="android.permission.VIBRATE" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".manageExercise.ManageExerciseActivity"
            android:label="Manage Exercise"
            android:screenOrientation="portrait"
            ></activity>
        <activity android:name=".manageExercise.ShowExercisesActivity"
            android:label="Show Exercise"
            android:screenOrientation="portrait"
            />
        <activity android:name=".mainActivity.AboutActivity"
            android:screenOrientation="portrait"
            />
        <activity
            android:name=".manageRoutine.ManageRoutineActivity"
            android:label="Manage Routine"
            android:screenOrientation="portrait"
            />
        <activity
            android:name=".manageWorkout.ManagerWorkoutActivity"
            android:label="Workouts Manager"
            android:screenOrientation="portrait"
            />
        <activity
            android:name=".playWorkoutPackage.PlayWorkoutActivity"
            android:label="Playing workout"
            android:screenOrientation="portrait"
            />
        <activity android:name=".mainActivity.MainActivity"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>